{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth/:path*" // 자기 자신 → rewrite 방지
    },
    {
      "source": "/api/:path*",
      "destination": "https://web-production-480d.up.railway.app/api/:path*"
    }
  ]
}
